{
  "manifest_version": 2,
  "name": "UG Tab Downloader",
  "version": "1.0.0",
  "description": "Ultimate-Guitar.com tab files downloader",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ultimate-guitar.com/"
      ],
      "js": [
        "cs.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "UG Tab Downloader",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.ultimate-guitar.com/*",
    "webRequest",
    "webRequestBlocking"
  ]
}
