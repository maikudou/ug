{
  "manifest_version": 2,
  "name": "UG Downloader",
  "version": "1.0",

  "description": "UG Downloader",

  "content_scripts": [
    {
      "matches": ["*://*.ultimate-guitar.com/*"],
      "js": ["js.js"]
    }
  ],
  "background": {
    "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_title": "UG Download",
    "default_popup": "popup.html"
  },
  "permissions": ["*://*.ultimate-guitar.com/*", "webRequest", "webRequestBlocking"]
}
